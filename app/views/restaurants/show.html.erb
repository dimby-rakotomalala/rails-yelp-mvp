<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1>About <%= @restaurant.name %></h1>
      <ul>
        <li>Address : <%= @restaurant.address %></li>
        <li>Phone number : <%= @restaurant.phone_number %></li>
        <li>Category : <%= @restaurant.category %></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h2>Reviews</h2>
      <ul>
        <% @restaurant.reviews.each do |review| %>
          <%= review.content %>
          <%= review.rating %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to "Edit restaurant", new_restaurant_path, class:"btn btn-primary" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
      <p><%= link_to "â†µ Back to Home", restaurants_path %></p>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1>About <%= @restaurant.name %></h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.select :rating, collection: [0, 1, 2, 3, 4, 5] %>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
